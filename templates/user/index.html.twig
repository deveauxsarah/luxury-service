{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Gender</th>
                <th>FirstName</th>
                <th>LastName</th>
                <th>Location</th>
                <th>Address</th>
                <th>Country</th>
                <th>Nationality</th>
                <th>Birthdate</th>
                <th>Birthplace</th>
                <th>Picture</th>
                <th>Passport</th>
                <th>Cv</th>
                <th>Experience</th>
                <th>Description</th>
                <th>Disponibility</th>
                <th>Email</th>
                <th>Password</th>
                <th>Roles</th>
                <th>File</th>
                <th>Notes</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>IsAdmin</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.gender }}</td>
                <td>{{ user.firstName }}</td>
                <td>{{ user.lastName }}</td>
                <td>{{ user.location }}</td>
                <td>{{ user.address }}</td>
                <td>{{ user.country }}</td>
                <td>{{ user.nationality }}</td>
                <td>{{ user.birthdate }}</td>
                <td>{{ user.birthplace }}</td>
                <td>{{ user.picture }}</td>
                <td>{{ user.passport }}</td>
                <td>{{ user.cv }}</td>
                <td>{{ user.experience }}</td>
                <td>{{ user.description }}</td>
                <td>{{ user.disponibility ? 'Yes' : 'No' }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.password }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.file }}</td>
                <td>{{ user.notes }}</td>
                <td>{{ user.createdAt ? user.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ user.updatedAt ? user.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ user.isAdmin ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_profile') }}">show</a>
                    <a href="{{ path('app_profile_edit', {'id': user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="25">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_user_new') }}">Create new</a>
{% endblock %}
