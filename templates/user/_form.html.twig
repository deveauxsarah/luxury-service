
{{ form_start(form , { 'attr' : {
   'accept-charset': "UTF-8" ,
   'id': "candidateForm" ,
   'role': "form" ,
   'data-parsley-validate': "" ,
   'enctype': "multipart/form-data"
},  'method': 'POST'}) }}


    {# {{ form_label(form.disponibility) }}
    {{ form_widget(form.disponibility) }} #}

    
     <section class="section-padding">
        <div class="container">
            <div class="row">
                <h3 class="text-extrabold">Your personal informations</h3> 
                <div class="col-xs-12 col-sm-6 col-md-4">
                    <div class="input-field">
                        <label for="gender" class="active">Gender</label>   
                        {{ form_widget(form.gender,{ 'attr' : { 'style' : 'display:block'}}) }}
                    </div>
                </div>
                
                <div class="clearfix visible-sm"></div>
                <div class="col-xs-12 col-sm-6 col-md-4">
                    <div class="input-field">
                        {{ form_label(form.firstName, 'First Name') }}    
                        {{ form_widget(form.firstName) }}
                    </div>
                </div>
                <div class="col-xs-12 col-sm-6 col-md-4">
                    <div class="input-field">
                            {{ form_label(form.lastName, 'Last Name') }}
                            {{ form_widget(form.lastName) }}
                    </div>
                </div>
                <div class="col-xs-12 col-sm-6 col-md-4">
                    <div class="input-field">
                            {{ form_label(form.location, 'Current location') }}
                            {{ form_widget(form.location) }}
                    </div>
                </div>
                <div class="col-xs-12 col-sm-8">
                    <div class="input-field">
                        {{ form_label(form.address, 'Address') }}
                        {{ form_widget(form.address) }}
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12 col-sm-6 col-md-4">
                    <div class="file-field input-field"
                         style="margin-top: 32px;">
                        <div class="btn btn-lg primary waves-effect waves-light">
                            <span><i class="material-icons">insert_photo</i> Photo</span>
                                {# {{ form_label(form.picture) }} #}
                                {{ form_widget(form.picture,{ 'attr' : { 'id': 'photo', 'size':20000000, 'name':'photo', 'type':'file'}}) }}
                                {# {  'value' : asset('uploads/') ~ user.picture} #}
                        </div> 
                        {# <div class="existing-file">
                            <a href="{{asset('uploads/')}}{{user.picture}}" target="_blank"><i class="material-icons">&#xE24D;</i>Profil Picture.jpg</a>
                        </div> #}
                        <div class="existing-file">
                            <a href="#!" target="_blank"><i class="material-icons">&#xE24D;</i> profil_picture.jpg</a>
                        </div>
                        <div class="file-path-wrapper">
                            <input class="file-path validate" type="text" placeholder="Upload your ID photo" readonly>
                        </div>
                    </div>
                </div>
               <div class="col-xs-12 col-sm-6 col-md-8">
                    <div class="row">
                        <div class="col-xs-12 col-sm-6">
                            <div class="input-field">
                                {{ form_label(form.country, 'Country') }}
                                {{ form_widget(form.country) }}
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-6">
                            <div class="input-field">
                                {{ form_label(form.nationality, 'Nationality') }}
                                {{ form_widget(form.nationality) }}
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-6">
                            <div class="input-field">
                                <label for="birth_date">Birthdate</label>
                                {{ form_widget(form.birthdate, {'attr' : {'style' : 'display: block'}}) }}
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-6">
                            <div class="input-field">
                                {{ form_label(form.birthplace, 'Birthplace') }}
                                {{ form_widget(form.birthplace) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row mt-40">
                <h3 class="text-extrabold">Your professional profile</h3>
                <div class="col-xs-12 col-sm-6">
                    <div class="card card-panel passport">
                        <div class="file-field input-field">
                            <div class="btn btn-lg primary waves-effect waves-light">
                                <span><i class="material-icons">&#xE24D;</i> Passport</span>
                                {# {{ form_label(form.passport) }} #}
                                {{ form_widget(form.passport, { 'attr' : { 'id': 'passport', 'size':20000000, 'name':'passport', 'type':'file'}}) }}
                                {# ,{ 'attr' : { 'value' : asset('uploads/') ~ user.passport}}) }} #}
                            </div>
                            {# <div class="existing-file">
                                <a href="{{asset('uploads/')}}{{user.passport}}" target="_blank"><i class="material-icons">&#xE24D;</i> passeport.jpg</a>
                            </div> #}
                            <div class="existing-file">
                                <a href="#!" target="_blank"><i class="material-icons">&#xE24D;</i> passeport.jpg</a>
                            </div>
                            <div class="file-path-wrapper">
                                <input class="file-path validate" type="text" placeholder="Upload your passport" readonly>
                            </div>
                        </div>
                        <div class="file-field input-field">
                            <div class="btn btn-lg primary waves-effect waves-light">
                                <span><i class="material-icons">&#xE24D;</i> CV</span>
                                {# {{ form_label(form.cv) }} #}
                                {{ form_widget(form.cv, { 'attr' : { 'id': 'cv', 'size':20000000, 'name':'cv', 'type':'file'}})}}
                                    {# {'attr' : { 'value' :  asset('uploads/') ~ user.cv }}) }} #}
                            </div>
                            {#<div class="existing-file">
                                <a href="{{asset('uploads/')}}{{user.cv}}" target="_blank"><i class="material-icons">&#xE24D;</i> CV.pdf</a>
                            </div> #}
                            <div class="existing-file">
                                <a href="#!" target="_blank"><i class="material-icons">&#xE24D;</i> CV.pdf</a>
                            </div>
                            <div class="file-path-wrapper">
                                <input class="file-path validate" type="text" placeholder="Upload your Curriculum Vitae" readonly>
                            </div>
                        </div>
                    </div>    
                </div>
                <div class="col-xs-12 col-sm-6">
                    <div class="col-xs-12 col-sm-12">
                        <div class="input-field" style="margin-top: 5px;">
                            {# <select id="job_sector" name="job_sector[]" multiple data-placeholder="Type in or Select job sector you would be interested in."> #}
                                {{ form_widget(form.categorie, { 'attr' : { 'multiple data-placeholder':'Type in or Select job sector you would be interested in.', 'id':'job_sector', 'name':'job_sector[]'}}) }}
                                <option value="">Choose an option...</option>
                                {% for categorie in categories %}
                                    <option value="{{ categorie.id }}">{{ categorie.name }}</option>
                                {% endfor %}
                            {# </select> #}
                            <label for="job_sector" class="active">Interest in job sector</label>
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-12">
                        <div class="input-field">
                            <label for="experience" class="active">Experience</label>
                            {{ form_widget(form.experience,{ 'attr' : { 'style' : 'display:block'}}) }}
                        </div>
                    </div>
                </div>
                <div class="col-xs-12 col-sm-12">
                    <div class="input-field">
                        {{ form_label(form.description, 'Description') }}
                        {{ form_widget(form.description, { 'attr' : { 'class':'materialize-textarea', 'id':'description', 'name':'description', 'cols':50, 'rows':10 }}) }}
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-sm-6 col-md-4 col-md-offset-4">
                <button class="btn btn-block btn-lg gradient secondary waves-effect waves-light">
                    {{ button_label|default('Save') }}
                </button>
            </div>
        </div>
    </section>      

    <section class="section-padding gray-bg">
                <div class="container">
                    <div class="row">
                        <h3 class="text-extrabold">Your K-Yachting account</h3>
                        <div class="col-xs-12 col-sm-4">
                            <div class="input-field">
                                <input required="required" id="email" name="email" type="email" value="">
                                <label for="email">Email</label>
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-4">
                            <div class="input-field">
                                <input id="password" name="password" type="password" value="">
                                <label for="password">Change your password here</label>
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-4">
                            <div class="input-field">
                                <input id="password_repeat" name="password_repeat" type="password" value="">
                                <label for="password_repeat">Confirm your new password</label>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12 mt-40 mb-80 delete-account">
                            <a href="#!" onclick="return prompt('Please Type \'Delete my account\' to delete your K-Yachting Services account:') == 'Delete my account'" class="btn btn-block btn-lg waves-effect waves-light"><i class="material-icons">&#xE872;</i>Delete my account</a>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12 col-sm-6 col-md-4">
                            <a href="#!" class="btn btn-block btn-lg border primary waves-effect waves-light"><i class="fa fa-long-arrow-left"></i> Back home</a>
                        </div>
                        <div class="col-xs-12 col-sm-6 col-md-4 col-md-offset-4">
                            <button type="submit" class="btn btn-block btn-lg gradient secondary waves-effect waves-light">
                                <span><strong>UPDATE</strong> NOW</span>
                            </button>
                        </div>
                    </div>

                </div>
            </section>

{{ form_end(form) }}
