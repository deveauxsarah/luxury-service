
{{ form_start(form , { 'attr' : {
   'accept-charset': "UTF-8" ,
   'id': "candidateForm" ,
   'role': "form" ,
   'data-parsley-validate': "" ,
   'enctype': "multipart/form-data"
},  'method': 'POST'}) }}


    {# {{ form_label(form.disponibility) }}
    {{ form_widget(form.disponibility) }} #}

    
     <section class="section-padding">
        <div class="container">
            <div class="row">
                <h3 class="text-extrabold">Your personal informations</h3> 
                <div class="col-xs-12 col-sm-6 col-md-4">
                    <div class="input-field">
                        <label for="gender" class="active">Gender</label>   
                        {{ form_widget(form.gender,{ 'attr' : { 'style' : 'display:block'}}) }}
                    </div>
                </div>
                
                <div class="clearfix visible-sm"></div>
                <div class="col-xs-12 col-sm-6 col-md-4">
                    <div class="input-field">
                        {{ form_label(form.firstName, 'First Name') }}    
                        {{ form_widget(form.firstName) }}
                    </div>
                </div>
                <div class="col-xs-12 col-sm-6 col-md-4">
                    <div class="input-field">
                            {{ form_label(form.lastName, 'Last Name') }}
                            {{ form_widget(form.lastName) }}
                    </div>
                </div>
                <div class="col-xs-12 col-sm-6 col-md-4">
                    <div class="input-field">
                            {{ form_label(form.location, 'Current location') }}
                            {{ form_widget(form.location) }}
                    </div>
                </div>
                <div class="col-xs-12 col-sm-8">
                    <div class="input-field">
                        {{ form_label(form.address, 'Address') }}
                        {{ form_widget(form.address) }}
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12 col-sm-6 col-md-4">
                    <div class="file-field input-field"
                         style="margin-top: 32px;">
                        <div class="btn btn-lg primary waves-effect waves-light">
                            <span><i class="material-icons">insert_photo</i> Photo</span>
                            {{ form_widget(form.picture,{ 'attr' : { 'id': 'photo', 'name':'photo', 'type':'file'}}) }}
                        </div> 
                        {% if user.picture %}
                        <div class="existing-file">
                            <a href="{{asset('uploads/')}}{{user.picture}}" target="_blank"><i class="material-icons">&#xE24D;</i>{{user.picture}}</a>
                        </div>
                        {% else %}
                        <div class="existing-file">
                            <a href="#!" target="_blank"><i class="material-icons">&#xE24D;</i> profil_picture.jpg</a>
                        </div>
                        {% endif %}
                        <div class="file-path-wrapper">
                            <input class="file-path validate" type="text" placeholder="Upload your ID photo" readonly>
                        </div>
                    </div>
                </div>
               <div class="col-xs-12 col-sm-6 col-md-8">
                    <div class="row">
                        <div class="col-xs-12 col-sm-6">
                            <div class="input-field">
                                {{ form_label(form.country, 'Country') }}
                                {{ form_widget(form.country) }}
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-6">
                            <div class="input-field">
                                {{ form_label(form.nationality, 'Nationality') }}
                                {{ form_widget(form.nationality) }}
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-6">
                            <div class="input-field">
                                <label for="birth_date">Birthdate</label>
                                {{ form_widget(form.birthdate, {'attr' : {'style' : 'display: block'}}) }}
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-6">
                            <div class="input-field">
                                {{ form_label(form.birthplace, 'Birthplace') }}
                                {{ form_widget(form.birthplace, {'attr' : { 'maxlength':4 }}) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row mt-40">
                <h3 class="text-extrabold">Your professional profile</h3>
                <div class="col-xs-12 col-sm-6">
                    <div class="card card-panel passport">
                        <div class="file-field input-field">
                            <div class="btn btn-lg primary waves-effect waves-light">
                                <span><i class="material-icons">&#xE24D;</i> Passport</span>
                                {{ form_widget(form.passport, { 'attr' : { 'id': 'passport', 'name':'passport', 'type':'file'}}) }}
                            </div>
                            {% if user.passport %}
                            <div class="existing-file">
                                <a href="{{asset('uploads/{{user.passport}}')}}" target="_blank"><i class="material-icons">&#xE24D;</i>{{user.passport}}</a>
                            </div>
                            {% else %}
                            <div class="existing-file">
                                <a href="#!" target="_blank"><i class="material-icons">&#xE24D;</i> passport.jpg</a>
                            </div>
                            {% endif %}
                            <div class="file-path-wrapper">
                                <input class="file-path validate" type="text" placeholder="Upload your passport" readonly>
                            </div>
                        </div>
                        <div class="file-field input-field">
                            <div class="btn btn-lg primary waves-effect waves-light">
                                <span><i class="material-icons">&#xE24D;</i> CV</span>
                                {{ form_widget(form.cv, { 'attr' : { 'id': 'cv', 'name':'cv', 'type':'file'}})}}
                            </div>
                            {% if user.cv %}
                            <div class="existing-file">
                                <a href="{{asset('uploads/{{user.cv}}')}}" target="_blank"><i class="material-icons">&#xE24D;</i>{{user.cv}}</a>
                            </div> 
                            {% else %}
                            <div class="existing-file">
                                <a href="#!" target="_blank"><i class="material-icons">&#xE24D;</i> cv.jpg</a>
                            </div>
                            {% endif %}
                            <div class="file-path-wrapper">
                                <input class="file-path validate" type="text" placeholder="Upload your Curriculum Vitae" readonly>
                            </div>
                        </div>
                        <div class="file-field input-field">
                            <div class="btn btn-lg primary waves-effect waves-light">
                                <span><i class="material-icons">&#xE24D;</i> File</span>
                                {{ form_widget(form.file, { 'attr' : { 'id': 'cv', 'name':'cv', 'type':'file'}})}}
                            </div>
                            {% if user.file %}
                            <div class="existing-file">
                                <a href="{{asset('uploads/{{user.file}}')}}" target="_blank"><i class="material-icons">&#xE24D;</i>{{user.file}}</a>
                            </div> 
                            {% else %}
                            <div class="existing-file">
                                <a href="#!" target="_blank"><i class="material-icons">&#xE24D;</i> file.jpg</a>
                            </div>
                            {% endif %}
                            <div class="file-path-wrapper">
                                <input class="file-path validate" type="text" placeholder="Upload your Curriculum Vitae" readonly>
                            </div>
                        </div>
                    </div>    
                </div>
                <div class="col-xs-12 col-sm-6">
                    <div class="col-xs-12 col-sm-12">
                        <div class="input-field" style="margin-top: 5px;">
                            {{ form_widget(form.categorie, { 'attr' : { 'style' : 'display:block', 'id':'job_sector', 'name':'job_sector[]'}}) }}
                            <label for="job_sector" class="active">Interest in job sector</label>
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-12">
                        <div class="input-field">
                            <label for="experience" class="active">Experience</label>
                            {{ form_widget(form.experience,{ 'attr' : { 'style' : 'display:block'}}) }}
                        </div>
                    </div>
                </div>
                <div class="col-xs-12 col-sm-12">
                    <div class="input-field">
                        {{ form_label(form.description, 'Description') }}
                        {{ form_widget(form.description, { 'attr' : { 'class':'materialize-textarea', 'id':'description', 'name':'description', 'cols':50, 'rows':10 }}) }}
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-sm-6 col-md-4 col-md-offset-4">
                {{ form_widget(form) }}
                <button class="btn btn-block btn-lg gradient secondary waves-effect waves-light" type="submit">
                    {{ button_label|default('Update') }}
                </button>
                <a class="btn btn-block btn-lg gradient secondary waves-effect waves-light" href="{{ path('app_profile') }}">back to profile</a>
            </div>
        </div>
    </section>      


{{ form_end(form) }}
